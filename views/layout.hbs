<section>
    <div>
        <div>
            <form method="post" action="/send-message">
                <label>
                    Tu nombre:
                    <input value={this.state.name} type="text"/>
                </label>
                <label>
                    E-mail:
                    <input  value={this.state.email} type="email"/>
                </label>
                <label>
                    Asunto:
                    <input value={this.state.about} type="text"/>
                </label>
                <label>
                    Tu mensaje:
                    <textarea  value={this.state.message} name="" id="" cols="30" rows="10"></textarea>
                </label>
                <button type="submit">
                    Enviar
                </button>
            </form>
        </div>
    </div>
</section>
